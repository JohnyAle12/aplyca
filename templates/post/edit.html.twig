{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | Editar Post {% endblock %}

{% block body %}
<div class="container h-100">
    <div class="col-12 mt-3">
        <h3 class="text-center">Editar Post</h3>
    </div>
    <div class="row h-100 justify-content-center aligns-items-center">
        {% if post.image %}
        <div class="col-12 col-md-3 col-lg-3 bg-white rounded my-3 p-5">
            <img src="{{ asset('uploads/post_images/' ~ post.image) }}" class="img-fluid">
        </div>
        {% endif %}
        <div class="col-12 col-md-6 col-lg-6 bg-white rounded my-3 p-5">
            {{ form(form) }}
        </div>
    </div>
</div>
{% endblock %}
