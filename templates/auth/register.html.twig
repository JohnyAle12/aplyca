{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="container h-100">
    <div class="row h-100 justify-content-center aligns-items-center">
        <div class="col-12 col-md-5 col-lg-5 bg-white rounded my-3 p-5">
            <h3 class="text-center">Registrarse</h3>
            {{ form_start(form) }}
                {{ form_label(form.name, 'Nombres:') }}
                {{ form_widget(form.name) }}
                {{ form_label(form.lastname, 'Apellidos:') }}
                {{ form_widget(form.lastname) }}
                {{ form_label(form.email, 'Correo electrtónico:') }}
                {{ form_widget(form.email) }}
                {{ form_label(form.password, 'Contraseña:') }}
                {{ form_widget(form.password) }}

                <div class="d-grid gap-2 mt-3">
                    {{ form_widget(form.Registrar, {'attr': {'class': 'btn-success'}}) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
