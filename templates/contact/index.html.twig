{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | Base contactos {% endblock %}

{% block body %}
<div class="container h-100">
    <div class="row h-100 justify-content-center aligns-items-center">
        <div class="col-12 bg-white rounded my-3 p-5">
            <h3 class="text-center">Información Contacto</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Fecha creación</th>
                        <th>Nombre</th>
                        <th>Asunto</th>
                        <th>Mensaje</th>
                    </tr>
                </thead>
                <tbody>
                {% for contact in contacts %}
                    <tr>
                        <td>{{ contact.createdAt|date('Y-m-d H:i:s') }}</td>
                        <td>{{ contact.name }}</td>
                        <td>{{ contact.subject }}</td>
                        <td>{{ contact.message }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">No existen registros</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation text-center">
                {{ knp_pagination_render(contacts) }}
            </div>
        </div>
    </div>
</div>

{% endblock %}
